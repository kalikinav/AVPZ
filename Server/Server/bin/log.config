<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<appender name="AllErrors" type="Base.Common.Logging.LogFileAppender">
    <file value="log\__DATE__\!errors\errors" />
    <encoding value="utf-8" />
    <datePattern value=".HH-00.lo\g" />
    <appendToFile value="true" />
    <maximumFileSize value="100mb" />
    <maxSizeRollBackups value="100" />
    <staticLogFileName value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%d{HH:mm:ss.fff} %-5level [%thread] %logger{1} - %message%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="ERROR" />
      <levelMax value="FATAL" />
    </filter>
	</appender>  
  <root>
	<appender-ref ref="AllErrors" />
  </root>
 </log4net>